{
  "plugins": {
    "sql": {
      "preload": ["sqlite:messages.db"]
    }
  },
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "push-all-display",
  "version": "0.1.0",
  "identifier": "com.fb0sh.push-all-display",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "push-all-display",
        "width": 400,
        "height": 600,
        "minWidth": 400,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
